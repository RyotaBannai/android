<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.playground.customView.CustomLayout
        android:id="@+id/custom_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:EnableToSend="true"
        custom:ButtonName="send"/>

    <com.example.playground.customView.CustomLayout
        android:id="@+id/custom_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:EnableToSend="true"
        custom:ButtonName="save"/>

    <com.example.playground.customView.CustomLayout
        android:id="@+id/custom_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:EnableToSend="false"
        custom:ButtonName="delete"/>
</LinearLayout>
